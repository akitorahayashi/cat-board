# === Configuration ===
OUTPUT_DIR := ./ci-outputs
PROJECT_FILE := CatBoardApp.xcodeproj
APP_SCHEME := CatBoardApp
UNIT_TEST_SCHEME := CatBoardTests
UI_TEST_SCHEME := CatBoardUITests

# CIÁî®„Å´„Ç∑„Éü„É•„É¨„Éº„Çø„ÇíÈÅ∏„Å∂Èñ¢Êï∞
select-simulator = $(shell \
    xcrun simctl list devices available | \
    grep -A1 "iPhone" | grep -Eo "[A-F0-9-]{36}" | head -n 1 \
)

# === Derived paths ===
ARCHIVE_PATH := $(OUTPUT_DIR)/production/archives/CatBoardApp.xcarchive
UNIT_TEST_RESULTS := $(OUTPUT_DIR)/test-results/unit/TestResults.xcresult
UI_TEST_RESULTS := $(OUTPUT_DIR)/test-results/ui/TestResults.xcresult
DERIVED_DATA_PATH := $(OUTPUT_DIR)/test-results/DerivedData

# === Local Simulator („É¶„Éº„Ç∂„ÅÆÁí∞Â¢É„Å´Âêà„Çè„Åõ„Å¶Â§âÊõ¥„Åó„Å¶„Åè„Å†„Åï„ÅÑ) ===
# LOCAL_SIMULATOR_NAME := iPhone 16 Pro
# LOCAL_SIMULATOR_OS := 26.0
# LOCAL_SIMULATOR_UDID := 5495CFE4-9EBC-45C5-8F85-37E0E143B3CC

# === App Bundle Identifier („Éó„É≠„Ç∏„Çß„ÇØ„ÉàË®≠ÂÆö„Å´Âêà„Çè„Åõ„Å¶Á¢∫Ë™ç„ÉªÂ§âÊõ¥„Åó„Å¶„Åè„Å†„Åï„ÅÑ) ===
APP_BUNDLE_ID := com.example.catboardapp

# === Boot simulator ===
.PHONY: boot
boot:
ifndef LOCAL_SIMULATOR_UDID
	$(error LOCAL_SIMULATOR_UDID is not set. Please uncomment and set it in the Makefile)
endif
	@echo "üöÄ Booting local simulator: $(LOCAL_SIMULATOR_NAME) (OS: $(LOCAL_SIMULATOR_OS), UDID: $(LOCAL_SIMULATOR_UDID))"
	xcrun simctl boot $(LOCAL_SIMULATOR_UDID) || echo "Simulator already booted."
	open -a Simulator
	@echo "‚úÖ Local simulator boot command executed."

.PHONY: run-debug
run-debug:
ifndef LOCAL_SIMULATOR_UDID
	$(error LOCAL_SIMULATOR_UDID is not set. Please uncomment and set it in the Makefile)
endif
	@echo "Using Local Simulator: $(LOCAL_SIMULATOR_NAME) (OS: $(LOCAL_SIMULATOR_OS), UDID: $(LOCAL_SIMULATOR_UDID))"
	@echo "üßπ Cleaning previous outputs..."
	@rm -rf $(OUTPUT_DIR)/debug
	@mkdir -p $(OUTPUT_DIR)/debug
	@echo "‚úÖ Previous outputs cleaned."
	@echo "üî® Building debug..."
	@set -o pipefail && xcodebuild build \
		-project $(PROJECT_FILE) \
		-scheme $(APP_SCHEME) \
		-destination "platform=iOS Simulator,id=$(LOCAL_SIMULATOR_UDID)" \
		-derivedDataPath $(OUTPUT_DIR)/debug/DerivedData \
		-configuration Debug \
		-skipMacroValidation \
		CODE_SIGNING_ALLOWED=NO \
		| xcbeautify
	@echo "‚úÖ Debug build completed."
	@echo "üì≤ Installing debug build to simulator ($(LOCAL_SIMULATOR_NAME))..."
	xcrun simctl install $(LOCAL_SIMULATOR_UDID) $(OUTPUT_DIR)/debug/DerivedData/Build/Products/Debug-iphonesimulator/$(APP_SCHEME).app
	@echo "‚úÖ Installed debug build."
	@echo "üöÄ Launching app ($(APP_BUNDLE_ID)) on simulator ($(LOCAL_SIMULATOR_NAME))..."
	xcrun simctl launch $(LOCAL_SIMULATOR_UDID) $(APP_BUNDLE_ID)
	@echo "‚úÖ App launched."

.PHONY: run-release
run-release:
ifndef LOCAL_SIMULATOR_UDID
	$(error LOCAL_SIMULATOR_UDID is not set. Please uncomment and set it in the Makefile)
endif
	@echo "Using Local Simulator: $(LOCAL_SIMULATOR_NAME) (OS: $(LOCAL_SIMULATOR_OS), UDID: $(LOCAL_SIMULATOR_UDID))"
	@echo "üßπ Cleaning previous outputs..."
	@rm -rf $(OUTPUT_DIR)/release
	@mkdir -p $(OUTPUT_DIR)/release
	@echo "‚úÖ Previous outputs cleaned."
	@echo "üî® Building release..."
	@set -o pipefail && xcodebuild build \
		-project $(PROJECT_FILE) \
		-scheme $(APP_SCHEME) \
		-destination "platform=iOS Simulator,id=$(LOCAL_SIMULATOR_UDID)" \
		-derivedDataPath $(OUTPUT_DIR)/release/DerivedData \
		-configuration Release \
		-skipMacroValidation \
		CODE_SIGNING_ALLOWED=NO \
		| xcbeautify
	@echo "‚úÖ Release build completed."
	@echo "üì≤ „É™„É™„Éº„Çπ„Éì„É´„Éâ„Çí„Ç∑„Éü„É•„É¨„Éº„ÇøÔºà$(LOCAL_SIMULATOR_NAME)Ôºâ„Å´„Ç§„É≥„Çπ„Éà„Éº„É´„Åó„Å¶„ÅÑ„Åæ„Åô..."
	xcrun simctl install $(LOCAL_SIMULATOR_UDID) $(OUTPUT_DIR)/release/DerivedData/Build/Products/Release-iphonesimulator/$(APP_SCHEME).app
	@echo "‚úÖ Installed release build."
	@echo "üöÄ Launching app ($(APP_BUNDLE_ID)) on simulator ($(LOCAL_SIMULATOR_NAME))..."
	xcrun simctl launch $(LOCAL_SIMULATOR_UDID) $(APP_BUNDLE_ID)
	@echo "‚úÖ App launched."

# === Build for testing ===
.PHONY: build-test
build-test:
ifeq ($(SIMULATOR_UDID),)
	$(eval SIMULATOR_ID := $(call select-simulator))
else
	$(eval SIMULATOR_ID := $(SIMULATOR_UDID))
endif
	@echo "Using Simulator UDID: $(SIMULATOR_ID)"
	@echo "üßπ Cleaning previous outputs..."
	@rm -rf $(DERIVED_DATA_PATH) $(UNIT_TEST_RESULTS) $(UI_TEST_RESULTS)
	@mkdir -p $(DERIVED_DATA_PATH) $(shell dirname $(UNIT_TEST_RESULTS)) $(shell dirname $(UI_TEST_RESULTS)) $(shell dirname $(ARCHIVE_PATH))
	@echo "‚úÖ Previous outputs cleaned."
	@echo "üî® Building for testing..."
	@set -o pipefail && xcodebuild build-for-testing \
		-project $(PROJECT_FILE) \
		-scheme $(APP_SCHEME) \
		-destination "platform=iOS Simulator,id=$(SIMULATOR_ID)" \
		-derivedDataPath $(DERIVED_DATA_PATH) \
		-configuration Debug \
		-skipMacroValidation \
		CODE_SIGNING_ALLOWED=NO \
		| xcbeautify
	@echo "‚úÖ Build for testing completed."

# === Archive ===
.PHONY: archive
archive: deps generate-project
	@echo "üßπ Cleaning previous outputs..."
	@rm -rf $(ARCHIVE_PATH) $(OUTPUT_DIR)/archives/DerivedData # Keep other outputs if any
	@mkdir -p $(shell dirname $(ARCHIVE_PATH)) $(OUTPUT_DIR)/archives/DerivedData
	@echo "‚úÖ Previous outputs cleaned."
	@echo "üì¶ Building archive..."
	@set -o pipefail && xcodebuild \
		-project $(PROJECT_FILE) \
		-scheme $(APP_SCHEME) \
		-configuration Release \
		-destination "generic/platform=iOS" \
		-archivePath $(ARCHIVE_PATH) \
		-derivedDataPath $(OUTPUT_DIR)/archives/DerivedData \
		-skipMacroValidation \
		CODE_SIGNING_ALLOWED=NO \
		archive \
		| xcbeautify
	@echo "üîç Verifying archive contents..."
	@ARCHIVE_APP_PATH="$(ARCHIVE_PATH)/Products/Applications/$(APP_SCHEME).app"; \
	if [ ! -d "$$ARCHIVE_APP_PATH" ]; then \
		echo "‚ùå Error: '$(APP_SCHEME).app' not found in expected archive location ($$ARCHIVE_APP_PATH)"; \
		echo "Archive directory: $(ARCHIVE_PATH)"; \
		exit 1; \
	fi
	@echo "‚úÖ Archive build completed and verified."

# === Unit tests ===
.PHONY: unit-test
unit-test: find-test-artifacts # Ensure build artifacts are available
ifeq ($(SIMULATOR_UDID),)
	$(eval SIMULATOR_ID := $(call select-simulator))
else
	$(eval SIMULATOR_ID := $(SIMULATOR_UDID))
endif
	@echo "Using Simulator UDID: $(SIMULATOR_ID)"
	@echo "üß™ Running Unit Tests..."
	@rm -rf $(UNIT_TEST_RESULTS)
	@set -o pipefail && xcodebuild test-without-building \
		-project $(PROJECT_FILE) \
		-scheme $(UNIT_TEST_SCHEME) \
		-destination "platform=iOS Simulator,id=$(SIMULATOR_ID)" \
		-derivedDataPath $(DERIVED_DATA_PATH) \
		-enableCodeCoverage NO \
		-resultBundlePath $(UNIT_TEST_RESULTS) \
		CODE_SIGNING_ALLOWED=NO \
		| xcbeautify
	@if [ ! -d "$(UNIT_TEST_RESULTS)" ]; then \
		echo "‚ùå Error: Unit test result bundle not found at $(UNIT_TEST_RESULTS)"; \
		exit 1; \
	fi
	@echo "‚úÖ Unit tests completed. Results: $(UNIT_TEST_RESULTS)"

# === UI tests ===
.PHONY: ui-test
ui-test: find-test-artifacts # Ensure build artifacts are available
ifeq ($(SIMULATOR_UDID),)
	$(eval SIMULATOR_ID := $(call select-simulator))
else
	$(eval SIMULATOR_ID := $(SIMULATOR_UDID))
endif
	@echo "Using Simulator UDID: $(SIMULATOR_ID)"
	@echo "üß™ Running UI Tests..."
	@rm -rf $(UI_TEST_RESULTS)
	@set -o pipefail && xcodebuild test-without-building \
		-project $(PROJECT_FILE) \
		-scheme $(UI_TEST_SCHEME) \
		-destination "platform=iOS Simulator,id=$(SIMULATOR_ID)" \
		-derivedDataPath $(DERIVED_DATA_PATH) \
		-enableCodeCoverage NO \
		-resultBundlePath $(UI_TEST_RESULTS) \
		CODE_SIGNING_ALLOWED=NO \
		| xcbeautify
	@if [ ! -d "$(UI_TEST_RESULTS)" ]; then \
		echo "‚ùå Error: UI test result bundle not found at $(UI_TEST_RESULTS)"; \
		exit 1; \
	fi
	@echo "‚úÖ UI tests completed. Results: $(UI_TEST_RESULTS)"

# === All tests ===
.PHONY: test-all
test-all: build-test unit-test ui-test
	@echo "‚úÖ All tests completed."

# === Dependencies check ===
.PHONY: deps
deps:
	@echo "üîç Checking dependencies..."
	@command -v mint >/dev/null 2>&1 || { echo "‚ùå Error: Mint not installed. Please install: brew install mint"; exit 1; }
	@command -v xcbeautify >/dev/null 2>&1 || { echo "‚ùå Error: xcbeautify not installed. Please install: brew install xcbeautify"; exit 1; }
	@command -v xcodegen >/dev/null 2>&1 || { echo "‚ùå Error: xcodegen not installed. Please install: brew install xcodegen"; exit 1; }
	@echo "‚úÖ All required dependencies are available."

# === Find existing artifacts ===
.PHONY: find-test-artifacts
find-test-artifacts:
	@echo "üîç Finding existing build artifacts in $(DERIVED_DATA_PATH)..."
	@if [ -d "$(DERIVED_DATA_PATH)" ] && find "$(DERIVED_DATA_PATH)" -name "$(APP_SCHEME).app" -type d -print -quit | grep -q "."; then \
		echo "‚úÖ Found existing build artifacts."; \
	else \
		echo "‚ÑπÔ∏è No existing build artifacts found. This is expected if 'make build-test' or 'make ci-build-for-testing' hasn't run yet, or if derived data is in a different location."; \
	fi

.PHONY: clean-proj
clean-proj:
ifndef LOCAL_SIMULATOR_UDID
	$(error LOCAL_SIMULATOR_UDID is not set. Please uncomment and set it in the Makefile)
endif
	@echo "üßπ Cleaning Xcode project build folder..."
	xcodebuild clean \
		-project $(PROJECT_FILE) \
		-scheme $(APP_SCHEME) \
		-destination "platform=iOS Simulator,id=$(LOCAL_SIMULATOR_UDID)"
	@echo "‚úÖ Project build folder cleaned."

# === CI specific targets ===
.PHONY: ci-build-for-testing
ci-build-for-testing: deps generate-project
	$(MAKE) build-test SIMULATOR_UDID=$(SIMULATOR_UDID)

.PHONY: ci-unit-test
ci-unit-test: deps generate-project
	$(MAKE) unit-test SIMULATOR_UDID=$(SIMULATOR_UDID)

.PHONY: ci-ui-test
ci-ui-test: deps generate-project
	$(MAKE) ui-test SIMULATOR_UDID=$(SIMULATOR_UDID)

# Generate Xcode Project (Helper for CI, can be used locally too)
.PHONY: generate-project
generate-project: deps
	@echo "‚öôÔ∏è Generating Xcode project using xcodegen..."
	mint run xcodegen generate
	@echo "‚úÖ Xcode project generated."

# === Package Tests ===
.PHONY: test-packages
test-packages: deps
	@echo "==============================="
	@echo "CatBoard „Éë„ÉÉ„Ç±„Éº„Ç∏„ÉÜ„Çπ„ÉàÈñãÂßã"
	@echo "==============================="
	@MODULES=("CatImageURLRepository" "CatImageScreener" "CatImagePrefetcher"); \
	FAILED_MODULES=""; \
	echo "üß™ ÂêÑ„É¢„Ç∏„É•„Éº„É´„ÅÆ„ÉÜ„Çπ„Éà„ÇíÂÆüË°å‰∏≠..."; \
	for MODULE in $${MODULES[@]}; do \
		echo ""; \
		echo "üì¶ $$MODULE „ÅÆ„ÉÜ„Çπ„ÉàÂÆüË°å‰∏≠..."; \
		echo "----------------------------------------"; \
		if (cd "$$MODULE" && swift test); then \
			echo "‚úÖ $$MODULE „ÅÆ„ÉÜ„Çπ„ÉàÂÆå‰∫Ü"; \
		else \
			echo "‚ùå $$MODULE „ÅÆ„ÉÜ„Çπ„Éà„ÅåÂ§±Êïó„Åó„Åæ„Åó„Åü"; \
			FAILED_MODULES="$$FAILED_MODULES $$MODULE"; \
		fi; \
	done; \
	echo ""; \
	echo "==============================="; \
	echo "„ÉÜ„Çπ„ÉàÁµêÊûú"; \
	echo "==============================="; \
	if [ -z "$$FAILED_MODULES" ]; then \
		echo "‚úÖ ÂÖ®„Å¶„ÅÆ„É¢„Ç∏„É•„Éº„É´„ÅÆ„ÉÜ„Çπ„Éà„ÅåÊàêÂäü„Åó„Åæ„Åó„ÅüÔºÅ"; \
		exit 0; \
	else \
		echo "‚ùå ‰ª•‰∏ã„ÅÆ„É¢„Ç∏„É•„Éº„É´„Åß„ÉÜ„Çπ„Éà„ÅåÂ§±Êïó„Åó„Åæ„Åó„Åü:"; \
		for FAILED in $$FAILED_MODULES; do \
			echo "  - $$FAILED"; \
		done; \
		exit 1; \
	fi
